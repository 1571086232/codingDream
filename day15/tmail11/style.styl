*
  margin 0
  padding 0
  box-sizing border-box

a {
  text-decoration none
}

html
body
  background-color red
  height 100%

.html_content
.item-section
  height 100%

.item-section
  position relative
  min-height 100%

.item-section_header > img
  width 10rem

ul
li
  list-style none
  position relative

.item-section ul
  padding 0.133333rem

.flag
  display table
  width 100%
  margin-bottom 1px
  background #fff
  padding 0.16rem 0

.figcaption
  padding-left 0.213333rem

.flag-price {
  margin 0.1rem 0
}

.active
  background-color red
  color #fff

.price {
  display inline-block
  font-size 16px
  color red
  font-weight bold
}

.hot {
  color #ff6a30
  font-size 13px
}

.price span {
  font-size 13px
}

.flag .flag-item
  display table-cell
  vertical-align top
  background #fff

.flag .flag-item.figure
  width 2.346667rem
  height 2.346667rem

.flag .flag-item.figure img
  max-width 100%

.flag-title
  width 6rem
  a
    color #000

.speed
  display block
  position absolute
  width 2.2rem
  height .75rem
  background-color red
  color #fff
  line-height .75rem
  text-align center
  font-size 15px
  right .253333rem
  bottom .2rem